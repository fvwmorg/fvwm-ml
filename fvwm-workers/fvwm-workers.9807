          win_x-=(new_width-win_width);
+       if ( win_border > 0) win_x+=win_border+1;
  
        if (win_grav==SouthEastGravity || win_grav==SouthWestGravity)
          win_y-=(new_height-win_height);
+       if ( win_border > 0) win_y+=win_border+1;
  
+       XMoveResizeWindow(dpy,win,win_x,
+ 			win_y, new_width,new_height);
  #if 0
        if(RESIZE_BUG_HACK)
        {
***************
*** 748,756 ****
  	else	
