+/*****************************************************************************
+ *
+ * Reads a multi-pixmap titlebar config. (tril@igs.net)
+ *
+ ****************************************************************************/
+static char *ReadMultiPixmapDecor(char *s, DecorFace *df)
+{
+  Picture **pm;
+  char *token, *next;
+  int i;
+  static char *pm_names[NUM_TB_PIXMAPS] = {
+    "Main",
+    "LeftMain",
+    "RightMain",
+    "UnderText",
+    "LeftOfText",
+    "RightOfText",
+    "LeftEnd",
+    "RightEnd",
+    "LeftButtons",
+    "RightButtons"
+  };
+
+  df->style.face_type = MultiPixmap;
+  df->u.multi_pixmaps = pm =
+    (Picture**)safecalloc(NUM_TB_PIXMAPS, sizeof(Picture*));
+
+  while (token = PeekToken(s, &next)) {
+    for (i=0; i < NUM_TB_PIXMAPS && !StrEquals(token, pm_names[i]); i++) {}
+    if (i == NUM_TB_PIXMAPS)
+      break;
+    s = next;
+    next = DoPeekToken(s, &token, NULL, ",", NULL);
+    if (!token)
+      break;
+    s = next;
+    if (pm[i]) {
+      fvwm_msg(WARN, "ReadMultiPixmapDecor",
+               "Ignoring already-specified pixmap in TitleStyle MultiPixmap");
+      continue;
+    }
+    pm[i] = CachePicture(dpy, Scr.NoFocusWin, NULL, token, Scr.ColorLimit);
+    if (!pm[i])
+      fvwm_msg(ERR, "ReadMultiPixmapDecor", "Pixmap '%s' could not be loaded",
+               token);
+  }
+
+  if (!pm[TBP_MAIN] && !(pm[TBP_LEFT_MAIN] && pm[TBP_RIGHT_MAIN])) {
+    fvwm_msg(ERR, "ReadMultiPixmapDecor",
+             "No Main pixmap found for TitleStyle MultiPixmap (you must specify either Main, or both LeftMain and RightMain)");
+    for (i=0; i < NUM_TB_PIXMAPS; i++) {
+      if (pm[i])
+        DestroyPicture(dpy, pm[i]);
+    }
+    free(pm);
+    return NULL;
+  }
+
+  return s;
+}
