+static void DrawMultiPixmapTitlebar(FvwmWindow *window, DecorFace *df)
+{
+  Window       title_win;
+  GC           gc;
+  const char  *title;
+  int          title_width, title_height, text_width, text_offset, text_y_pos;
+  int          left_space, right_space, under_offset, under_width;
