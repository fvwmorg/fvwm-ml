 /* Define if gdk-imlib is used */
 #undef GDK_IMLIB
 
--- fvwm/screen.h.orig	Wed Oct  3 20:06:01 2001
+++ fvwm/screen.h	Sun Oct  7 04:30:01 2001
@@ -54,6 +54,11 @@
 #define COLORMAP_FOLLOWS_MOUSE 1 /* default */
 #define COLORMAP_FOLLOWS_FOCUS 2
 
+#ifdef FANCY_TITLEBARS
