+/****************************************************************************
+ *
+ *  Tile src into dest, starting at the given location and continuing for
+ *  the given width and height. This is a utility function used by
+ *  DrawMultiPixmapTitlebar. (tril@igs.net)
+ *
+ ****************************************************************************/
+static void TileIntoWindow(GC gc, Picture *src, Window dest, int x_start,
+                           int y_start, int width, int height)
+{
+  Pixmap pm = CreateTiledPixmap(dpy, src->picture, src->width, src->height,
+                                width, height, src->depth, gc);
+  XCopyArea(dpy, pm, dest, gc, 0, 0, width, height, x_start, y_start);
+  XFreePixmap(dpy, pm);
+}
