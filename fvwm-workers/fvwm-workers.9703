+ void SetIconColor(XEvent *eventp,Window w,FvwmWindow *tmp_win,
+ 		unsigned long context, char *action,int* Module)
+ {
+   XGCValues gcv;
+   unsigned long gcm;
+   char *fore=NULL, *back=NULL, *hifore=NULL, *hiback=NULL;
+   extern char *white,*black;
+   FvwmWindow *hilight;
+ #ifdef USEDECOR
+   FvwmDecor *fl = cur_decor ? cur_decor : &Scr.DefaultDecor;
+ #else
+   FvwmDecor *fl = &Scr.DefaultDecor;
+ #endif
+   
+   if( action && action[0])
+     action = GetNextToken(action,&fore);
+   if( action && action[0])
+     action = GetNextToken(action,&back);
+   if( action && action[0])
+     action = GetNextToken(action,&hifore);
+   if( action && action[0])
+     GetNextToken(action,&hiback);
+ 
+   if(Scr.d_depth > 2)
+   {
+     if(fore != NULL)
+     {
+ 	fl->IconColors.fore = GetColor(fore);
+     }
+     if(back != NULL)
+     {
+ 	fl->IconColors.back = GetColor(back);
+     }
+     if(hifore != NULL)
+     {
+ 	fl->IconHiColors.fore = GetColor(hifore);
+     }
+     if(hiback != NULL)
+     {
+ 	fl->IconHiColors.back = GetColor(hiback);
+     }
+     fl->IconRelief.back    = GetShadow(fl->IconColors.back);
+     fl->IconRelief.fore    = GetHilite(fl->IconColors.back);
+     fl->IconHiRelief.back  = GetShadow(fl->IconHiColors.back);
+     fl->IconHiRelief.fore  = GetHilite(fl->IconHiColors.back);
+   }
+   else
+   {
+     fl->IconColors.back  = GetColor(white);
+     fl->IconColors.fore  = GetColor(black); 
+     fl->IconRelief.back  = GetColor(black);
+     fl->IconRelief.fore  = GetColor(white);
+     fl->IconHiColors.back  = GetColor(white);
+     fl->IconHiColors.fore  = GetColor(black); 
+     fl->IconHiRelief.back  = GetColor(black);
+     fl->IconHiRelief.fore  = GetColor(white);
+   }
+   if (fore) free(fore); 
+   if (back) free(back);
+   if (hifore) free(hifore); 
+   if (hiback) free(hiback);
+   /*-----norm colors--------*/
+   gcm = GCFunction|GCPlaneMask|GCGraphicsExposures|GCLineWidth|GCForeground|
+     GCBackground;
+   gcv.foreground = fl->IconRelief.fore;
+   gcv.background = fl->IconRelief.back;
+   gcv.fill_style = FillSolid;
+   gcv.plane_mask = AllPlanes;
+   gcv.function = GXcopy;
+   gcv.graphics_exposures = False;
+   gcv.line_width = 0;
+ 
+   if(fl->IconReliefGC != NULL)
+   {
+     XFreeGC(dpy,fl->IconReliefGC);
+   }
+   fl->IconReliefGC = XCreateGC(dpy, Scr.Root, gcm, &gcv);  
+ 
+   gcv.foreground = fl->IconRelief.back;
+   gcv.background = fl->IconRelief.fore;
+   if(fl->IconShadowGC != NULL)
+   {
+     XFreeGC(dpy,fl->IconShadowGC);
+   }
+   fl->IconShadowGC = XCreateGC(dpy, Scr.Root, gcm, &gcv);  
+   /*-----hi colors--------*/
+   gcm = GCFunction|GCPlaneMask|GCGraphicsExposures|GCLineWidth|GCForeground|
+     GCBackground;
+   gcv.foreground = fl->IconHiRelief.fore;
+   gcv.background = fl->IconHiRelief.back;
+   gcv.fill_style = FillSolid;
+   gcv.plane_mask = AllPlanes;
+   gcv.function = GXcopy;
+   gcv.graphics_exposures = False;
+   gcv.line_width = 0;
+ 
+   if(fl->IconHiReliefGC != NULL)
+   {
+     XFreeGC(dpy,fl->IconHiReliefGC);
+   }
+   fl->IconHiReliefGC = XCreateGC(dpy, Scr.Root, gcm, &gcv);  
+ 
+   gcv.foreground = fl->IconHiRelief.back;
+   gcv.background = fl->IconHiRelief.fore;
+   if(fl->IconHiShadowGC != NULL)
+   {
+     XFreeGC(dpy,fl->IconHiShadowGC);
+   }
+   fl->IconHiShadowGC = XCreateGC(dpy, Scr.Root, gcm, &gcv);  
+ 
+ /*-------------*/
+ #if 0
+   if((Scr.flags & WindowsCaptured)&&(Scr.Hilite != NULL))
+   {
+     hilight = Scr.Hilite;
+     SetBorder(Scr.Hilite,False,True,True,None);
+     SetBorder(hilight,True,True,True,None);
+   }
+ #endif
+ }
