--- fvwm-2.0.46/fvwm/colors.c.orig    Mon Jun 15 20:24:34 1998
+++ fvwm-2.0.46/fvwm/colors.c    Mon Jun 15 20:26:07 1998
@@ -1,3 +1,10 @@
+/* fixed (increased) shadow/hilight contrast (looks more like mwm now)
+   patch by Jakub Jasinski (jasinski@sprint.ca)
+
+   --  this makes the windows look much much much nicer, esp with the
default
+       mwm color (#59659e79a699)
+*/
+
 /****************************************************************************

  * This module is all new
  * by Rob Nation
@@ -57,10 +64,11 @@
   r = r >>1;
   g = g >>1;
   b = b >>1;
-
-  bg_color.red = r;
-  bg_color.green = g;
-  bg_color.blue = b;
+
+/* the shadow is darkened here (more contrast than before) */
+  bg_color.red = (int)((double)r * 0.8);
+  bg_color.green = (int)((double)g * 0.8);
+  bg_color.blue = (int)((double)b * 0.8);

   if(!XAllocColor(dpy,attributes.colormap,&bg_color))
     {
@@ -94,13 +102,14 @@
 #define max(a,b) (((a)>(b)) ? (a) : (b))
 #endif

-  bg_color.red = max((white_p.red/5), bg_color.red);
-  bg_color.green = max((white_p.green/5), bg_color.green);
-  bg_color.blue = max((white_p.blue/5), bg_color.blue);
-
-  bg_color.red = min(white_p.red, (bg_color.red*140)/100);
-  bg_color.green = min(white_p.green, (bg_color.green*140)/100);
-  bg_color.blue = min(white_p.blue, (bg_color.blue*140)/100);
+/* the hilight is made lighter here (more contrast than before) */
+  bg_color.red = max((white_p.red/4), bg_color.red);
+  bg_color.green = max((white_p.green/4), bg_color.green);
+  bg_color.blue = max((white_p.blue/4), bg_color.blue);
+
+  bg_color.red = min(white_p.red, (bg_color.red*160)/100);
+  bg_color.green = min(white_p.green, (bg_color.green*160)/100);
+  bg_color.blue = min(white_p.blue, (bg_color.blue*160)/100);

 #undef min
 #ifdef max


